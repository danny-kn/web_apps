<h2 class="mt-4"><%= heading %></h2>
<div class="list-group">
    <% presentations.each do |presentation| %>
    <%= link_to course_presentation_path(presentation.course, presentation), 
                class: "list-group-item list-group-item-action" do %>
        <h5 class="mb-1"><%= presentation.title %></h5>
        <p class="mb-1">
        <%= presentation.presentation_date.strftime("%B %d, %Y") %> |
        <%= presentation.course.name %> |
        Presenter: <%= presentation.presenter.name %>
        </p>
    <% end %>
    <% end %>
</div>