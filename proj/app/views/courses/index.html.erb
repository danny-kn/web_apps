<div class="page-header d-flex justify-content-between align-items-center">
  <h1><i class="bi bi-book me-2"></i>Courses</h1>
  <% if current_user.instructor? %>
    <%= link_to new_course_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-lg me-1"></i>New Course
    <% end %>
  <% end %>
</div>

<div class="row g-4">
  <% @courses.each do |course| %>
    <div class="col-md-6 col-lg-4">
      <div class="card course-card">
        <div class="card-body">
          <h5 class="card-title"><%= course.code %> - <%= course.name %></h5>
          <p class="card-text text-muted">
            <i class="bi bi-person me-1"></i><%= course.instructor.name %><br>
            <i class="bi bi-people me-1"></i><%= pluralize(course.students.count, 'student') %>
          </p>
          <%= link_to course_path(course), class: "btn btn-primary w-100" do %>
            <i class="bi bi-arrow-right me-1"></i>View Course
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div> 
