<div class="container mt-4">
  <h2>Grade Presentation</h2>
  
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @presentation.title %></h5>
      <p class="card-text">Presenter: <%= @presentation.presenter.name %></p>
      
      <%= form_with(url: presentation_grade_path(@presentation), model: @grade, local: true) do |f| %>
        <% if @grade.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@grade.errors.count, "error") %> prohibited this grade from being saved:</h4>
            <ul>
              <% @grade.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :score, "Score (0-100)" %>
          <%= f.number_field :score, class: 'form-control', min: 0, max: 100, step: 0.1 %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :feedback %>
          <%= f.text_area :feedback, class: 'form-control', rows: 5 %>
        </div>

        <div class="mt-3">
          <%= f.submit "Submit Grade", class: 'btn btn-primary' %>
          <%= link_to "Cancel", presentation_path(@presentation), class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div> 
